@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = null; // handle the full layout here since this is a staff-only area
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Dashboard - CityPoint Room Hire</title>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --navy-dark: #1A2942;
            --navy-medium: #2D3E5F;
            --navy-light: #3B4E6F;
            --accent-orange: #FFB84D;
            --white: #FFFFFF;
            --off-white: #F8F9FA;
            --gray-light: #E8EAED;
            --gray-medium: #6B7280;
            --text-dark: #111827;
            --success: #10B981;
            --warning: #F59E0B;
            --danger: #EF4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Sora', sans-serif;
            background: var(--off-white);
            color: var(--text-dark);
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: var(--navy-dark);
            color: var(--white);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.25rem;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: var(--accent-orange);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--navy-dark);
        }

        .logo-text {
            font-size: 1.125rem;
            font-weight: 700;
        }

        .sidebar-subtitle {
            font-size: 0.813rem;
            color: rgba(255, 255, 255, 0.6);
            margin-left: 48px;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem 0;
            overflow-y: auto;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.938rem;
            font-weight: 500;
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background: rgba(255, 255, 255, 0.05);
                color: var(--white);
            }

            .nav-item.active {
                background: rgba(255, 184, 77, 0.1);
                color: var(--accent-orange);
                border-left-color: var(--accent-orange);
            }

            .nav-item svg {
                width: 20px;
                height: 20px;
                flex-shrink: 0;
            }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .staff-profile {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .staff-avatar {
            width: 40px;
            height: 40px;
            background: var(--accent-orange);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: var(--navy-dark);
        }

        .staff-info {
            flex: 1;
        }

        .staff-name {
            font-size: 0.938rem;
            font-weight: 600;
            color: var(--white);
        }

        .staff-email {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            text-decoration: none;
            justify-content: center;
        }

            .logout-btn:hover {
                background: rgba(255, 255, 255, 0.05);
                color: var(--white);
                border-color: rgba(255, 255, 255, 0.3);
            }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            flex: 1;
            padding: 2rem;
            min-height: 100vh;
        }

        .restricted-banner {
            background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            border-left: 4px solid var(--danger);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .restricted-banner svg {
                color: var(--danger);
                flex-shrink: 0;
            }

        .restricted-text {
            font-size: 0.938rem;
            font-weight: 600;
            color: #991B1B;
        }

        .dashboard-header {
            margin-bottom: 2.5rem;
        }

        .dashboard-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--navy-dark);
            margin-bottom: 0.5rem;
        }

        .dashboard-subtitle {
            color: var(--gray-medium);
            font-size: 1.063rem;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .stat-card {
            background: var(--white);
            padding: 1.75rem;
            border-radius: 16px;
            border: 1px solid var(--gray-light);
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
            }

        .stat-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

            .stat-icon.yellow {
                background: linear-gradient(135deg, #FFF3E0 0%, #FFE6C7 100%);
            }

            .stat-icon.orange {
                background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
            }

            .stat-icon.green {
                background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
            }

            .stat-icon.blue {
                background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
            }

        .stat-label {
            font-size: 0.875rem;
            color: var(--gray-medium);
            font-weight: 500;
        }

        .stat-value {
            font-size: 2.25rem;
            font-weight: 700;
            color: var(--navy-dark);
        }

        .stat-description {
            font-size: 0.875rem;
            color: var(--gray-medium);
            margin-top: 0.25rem;
        }

        /* Content Grid */
        .content-grid {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        /* Recent Bookings */
        .recent-bookings {
            background: var(--white);
            border-radius: 16px;
            border: 1px solid var(--gray-light);
            overflow: hidden;
        }

        .section-header {
            padding: 1.75rem;
            border-bottom: 1px solid var(--gray-light);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .section-title {
            font-size: 1.375rem;
            font-weight: 600;
            color: var(--navy-dark);
        }

        .view-all-link {
            color: var(--navy-dark);
            text-decoration: none;
            font-size: 0.938rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.25rem;
            transition: color 0.3s ease;
        }

            .view-all-link:hover {
                color: var(--accent-orange);
            }

        .booking-list {
            padding: 0;
        }

        .booking-item {
            padding: 1.5rem 1.75rem;
            border-bottom: 1px solid var(--gray-light);
            transition: background 0.3s ease;
        }

            .booking-item:last-child {
                border-bottom: none;
            }

            .booking-item:hover {
                background: var(--off-white);
            }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }

        .booking-customer {
            font-weight: 600;
            color: var(--navy-dark);
            font-size: 1rem;
        }

        .booking-status {
            padding: 0.375rem 0.875rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
        }

            .booking-status.pending {
                background: #FEF3C7;
                color: #92400E;
            }

            .booking-status.confirmed {
                background: #D1FAE5;
                color: #065F46;
            }

        .booking-room {
            color: var(--gray-medium);
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }

        .booking-time {
            color: var(--gray-medium);
            font-size: 0.875rem;
        }

        /* Quick Actions */
        .quick-actions {
            background: var(--white);
            border-radius: 16px;
            border: 1px solid var(--gray-light);
            padding: 1.75rem;
        }

        .action-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.25rem;
            background: var(--off-white);
            border-radius: 12px;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
        }

            .action-item:last-child {
                margin-bottom: 0;
            }

            .action-item:hover {
                background: var(--navy-dark);
                color: var(--white);
                transform: translateX(4px);
            }

            .action-item.primary {
                background: var(--navy-dark);
                color: var(--white);
            }

                .action-item.primary:hover {
                    background: var(--accent-orange);
                    color: var(--navy-dark);
                }

        .action-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .action-item.primary .action-icon {
            background: rgba(255, 255, 255, 0.15);
        }

        .action-content {
            flex: 1;
        }

        .action-title {
            font-weight: 600;
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .action-description {
            font-size: 0.813rem;
            opacity: 0.8;
        }

        /* Alert Box */
        .alert-box {
            background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
            padding: 1.5rem;
            border-radius: 12px;
            border-left: 4px solid var(--warning);
            display: flex;
            gap: 1rem;
        }

        .alert-icon {
            color: var(--warning);
            flex-shrink: 0;
        }

        .alert-content h3 {
            font-size: 1rem;
            font-weight: 600;
            color: #92400E;
            margin-bottom: 0.5rem;
        }

        .alert-content p {
            font-size: 0.875rem;
            color: #78350F;
            margin-bottom: 1rem;
        }

        .alert-btn {
            display: inline-block;
            padding: 0.625rem 1.25rem;
            background: var(--white);
            color: #92400E;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .alert-btn:hover {
                background: #92400E;
                color: var(--white);
            }

        /* Responsive */
        @@media (max-width: 1200px) {
            .content-grid

        {
            grid-template-columns: 1fr;
        }

        }

        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .sidebar.mobile-open {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .dashboard-title {
            font-size: 2rem;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <div class="logo-icon">CP</div>
                <div class="logo-text">CityPoint</div>
            </div>
            <div class="sidebar-subtitle">Staff Portal</div>
        </div>

        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="nav-item active">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                Dashboard
            </a>
            <a href="@Url.Action("ManageBooking", "Admin")" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Manage Bookings
            </a>
            <a href="@Url.Action("ManageRoom", "Admin")" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Manage Rooms
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="staff-profile">
                <div class="staff-avatar">
                    @(User.Identity?.Name?.Substring(0, 2).ToUpper())
                </div>
                <div class="staff-info">
                    <div class="staff-name">Staff Admin</div>
                    <div class="staff-email">@User.Identity?.Name</div> <!-- im calling the real admin email using aspnet identity-->
                </div>
            </div>
        </div>
            <a href="@Url.Action("Index", "Home")" class="logout-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                Exit Staff Area
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Restricted Banner -->
        <div class="restricted-banner">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path>
            </svg>
            <span class="restricted-text">Restricted Area - Staff Access Only</span>
        </div>

        <!-- Dashboard Header -->
        <header class="dashboard-header">
            <h1 class="dashboard-title">Staff Dashboard</h1>
            <p class="dashboard-subtitle">Welcome back! Here's an overview of your venue.</p>
        </header>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon yellow">📅</div>
                    <div class="stat-label">This Month</div>
                </div>
                <div class="stat-value">@Model.Count()</div>
                <div class="stat-description">Total Bookings</div> <!-- i made this count total booking amount using the logic in admincontroller -->
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon orange">⏰</div>
                    <div class="stat-label">Needs Action</div>
                </div>
                <div class="stat-value">@Model.Count(b => b.Status == "Pending")</div>  <!-- i made this count how many are pending using the logic in admincontroller -->
                <div class="stat-description">Pending Requests</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon green">🏢</div>
                    <div class="stat-label">Available</div>
                </div>
                <div class="stat-value">@ViewBag.AvailableRooms</div> <!-- i made this count available rooms using the logic in admincontroller -->
                <div class="stat-description">Active Rooms</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon blue">📈</div>
                    <div class="stat-label">This Month</div>
                </div>
                <div class="stat-value">£4,250</div>
                <div class="stat-description">Revenue</div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="content-grid">
            <!-- Recent Bookings -->
            <div class="recent-bookings">
                <div class="section-header">
                    <h2 class="section-title">Recent Booking Requests</h2>
                    <a href="@Url.Action("Index", "Bookings")" class="view-all-link">
                        View All
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </a>
                </div>
                <div class="booking-list">
                    @foreach (var item in Model.OrderByDescending(b => b.BookingDate).Take(3))
                    {
                        <div class="booking-item">
                            <div class="booking-header">
                                <div class="booking-customer">Customer Name</div>
                                <span class="booking-status @item.Status.ToLower()">@item.Status</span>
                            </div>
                            <div class="booking-room">Room ID: @item.RoomId</div>
                            <div class="booking-time">@item.BookingDate.ToString("dd MMM"), @item.StartTime.ToString("HH:mm")</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="quick-actions">
                <h2 class="section-title" style="margin-bottom: 1.5rem;">Quick Actions</h2>

                <a href="@Url.Action("ManageBooking", "Admin")" class="action-item primary">
                    <div class="action-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Manage Booking Requests</div>
                        <div class="action-description">Review and confirm pending bookings</div>
                    </div>
                </a>

                <a href="@Url.Action("ManageRoom", "Admin")" class="action-item">
                    <div class="action-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Manage Rooms</div>
                        <div class="action-description">Update room details and availability</div>
                    </div>
                </a>

            </div>
        </div>

        <!-- Alert Box -->
        @if (Model.Any(b => b.Status == "Pending"))
        {
            <div class="alert-box">
                <div class="alert-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12" stroke="white" stroke-width="2"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16" stroke="white" stroke-width="2"></line>
                    </svg>
                </div>
                <div class="alert-content">
                    <h3>Pending Booking Requests</h3>
                    <p>You have @Model.Count(b => b.Status == "Pending") booking requests awaiting confirmation. Please review them within 24 hours.</p>
                    <a href="@Url.Action("ManageBooking", "Admin")" class="alert-btn">Review Now</a>
                </div>
            </div>
        }
    </main>
</body>
</html>