@model IEnumerable<CPRH.Models.Room>


@{
    ViewData["Title"] = "Manage Rooms";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Rooms - CityPoint Room Hire</title>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --navy-dark: #1A2942;
            --navy-medium: #2D3E5F;
            --navy-light: #3B4E6F;
            --accent-orange: #FFB84D;
            --white: #FFFFFF;
            --off-white: #F8F9FA;
            --gray-light: #E8EAED;
            --gray-medium: #6B7280;
            --text-dark: #111827;
            --success: #10B981;
            --warning: #F59E0B;
            --danger: #EF4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Sora', sans-serif;
            background: var(--off-white);
            color: var(--text-dark);
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: var(--navy-dark);
            color: var(--white);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.25rem;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: var(--accent-orange);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--navy-dark);
        }

        .logo-text {
            font-size: 1.125rem;
            font-weight: 700;
        }

        .sidebar-subtitle {
            font-size: 0.813rem;
            color: rgba(255, 255, 255, 0.6);
            margin-left: 48px;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem 0;
            overflow-y: auto;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.938rem;
            font-weight: 500;
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background: rgba(255, 255, 255, 0.05);
                color: var(--white);
            }

            .nav-item.active {
                background: rgba(255, 184, 77, 0.1);
                color: var(--accent-orange);
                border-left-color: var(--accent-orange);
            }

            .nav-item svg {
                width: 20px;
                height: 20px;
                flex-shrink: 0;
            }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .staff-profile {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .staff-avatar {
            width: 40px;
            height: 40px;
            background: var(--accent-orange);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: var(--navy-dark);
        }

        .staff-info {
            flex: 1;
        }

        .staff-name {
            font-size: 0.938rem;
            font-weight: 600;
            color: var(--white);
        }

        .staff-email {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            text-decoration: none;
            justify-content: center;
        }

            .logout-btn:hover {
                background: rgba(255, 255, 255, 0.05);
                color: var(--white);
                border-color: rgba(255, 255, 255, 0.3);
            }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            flex: 1;
            padding: 2rem;
            min-height: 100vh;
        }

        .restricted-banner {
            background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            border-left: 4px solid var(--danger);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .restricted-banner svg {
                color: var(--danger);
                flex-shrink: 0;
            }

        .restricted-text {
            font-size: 0.938rem;
            font-weight: 600;
            color: #991B1B;
        }

        .page-header {
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .page-header-text {
            flex: 1;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--navy-dark);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: var(--gray-medium);
            font-size: 1.063rem;
        }

        .btn-add-room {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 1.5rem;
            background: var(--navy-dark);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.938rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .btn-add-room:hover {
                background: var(--accent-orange);
                color: var(--navy-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255, 184, 77, 0.3);
            }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: var(--white);
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--gray-light);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

            .stat-icon.total {
                background: rgba(255, 184, 77, 0.15);
                color: var(--accent-orange);
            }

            .stat-icon.active {
                background: rgba(16, 185, 129, 0.15);
                color: var(--success);
            }

            .stat-icon.capacity {
                background: rgba(99, 102, 241, 0.15);
                color: #6366F1;
            }

        .stat-content {
            flex: 1;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--navy-dark);
            line-height: 1;
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--gray-medium);
        }

        /* Rooms Grid */
        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .room-card {
            background: var(--white);
            border-radius: 12px;
            border: 1px solid var(--gray-light);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .room-card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
                transform: translateY(-2px);
            }

        .room-image-wrapper {
            position: relative;
            width: 100%;
            height: 180px;
            overflow: hidden;
        }

        .room-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .room-status-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            padding: 0.375rem 0.875rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
        }

            .room-status-badge.active {
                background: #1F2937;
                color: var(--white);
            }

            .room-status-badge.inactive {
                background: #E5E7EB;
                color: #6B7280;
            }

        .room-card-content {
            padding: 1.5rem;
        }

        .room-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.75rem;
        }

        .room-name {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin-bottom: 0.25rem;
        }

        .room-capacity {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            color: var(--gray-medium);
            font-size: 0.875rem;
        }

            .room-capacity svg {
                width: 16px;
                height: 16px;
            }

        .room-pricing {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 1rem;
            font-size: 0.875rem;
            color: var(--gray-medium);
        }

        .price-item {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .price-separator {
            color: var(--gray-light);
        }

        .room-actions {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding-top: 1rem;
            border-top: 1px solid var(--gray-light);
        }

        .availability-toggle {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex: 1;
        }

        .toggle-switch {
            position: relative;
            width: 44px;
            height: 24px;
            background: #D1D5DB;
            border-radius: 12px;
            transition: all 0.3s ease;
            pointer-events: none; /* This prevents clicking */
        }

            .toggle-switch.active {
                background: var(--navy-dark);
            }

            .toggle-switch::after {
                content: '';
                position: absolute;
                top: 2px;
                left: 2px;
                width: 20px;
                height: 20px;
                background: var(--white);
                border-radius: 50%;
                transition: all 0.3s ease;
            }

            .toggle-switch.active::after {
                transform: translateX(20px);
            }

        .availability-label {
            font-size: 0.875rem;
            color: var(--gray-medium);
            font-weight: 500;
        }

        .btn-edit {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.5rem 1rem;
            background: transparent;
            border: 1px solid var(--gray-light);
            border-radius: 6px;
            color: var(--navy-dark);
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .btn-edit:hover {
                background: var(--off-white);
                border-color: var(--navy-dark);
            }

            .btn-edit svg {
                width: 14px;
                height: 14px;
            }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--white);
            border-radius: 12px;
            border: 1px solid var(--gray-light);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            color: var(--gray-medium);
        }

        /* Responsive */
        @@media (max-width: 1200px) {
            .rooms-grid

        {
            grid-template-columns: 1fr;
        }

        }

        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .sidebar.mobile-open {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .page-title {
            font-size: 2rem;
        }

        .page-header {
            flex-direction: column;
            gap: 1rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <div class="logo-icon">CP</div>
                <div class="logo-text">CityPoint</div>
            </div>
            <div class="sidebar-subtitle">Staff Portal</div>
        </div>

        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                Dashboard
            </a>
            <a href="@Url.Action("ManageBooking", "Admin")" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Manage Bookings
            </a>
            <a href="@Url.Action("ManageRoom", "Admin")" class="nav-item active">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Manage Rooms
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="staff-profile">
                <div class="staff-avatar">
                    @(User.Identity?.Name?.Substring(0, 2).ToUpper())
                </div>
                <div class="staff-info">
                    <div class="staff-name">Staff Admin</div>
                    <div class="staff-email">@User.Identity?.Name</div> <!-- im calling the real admin email using aspnet identity-->
                </div>
            </div>
        </div>
            <a href="@Url.Action("Index", "Home")" class="logout-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                Exit Staff Area
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Restricted Banner -->
        <div class="restricted-banner">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path>
            </svg>
            <span class="restricted-text">Restricted Area - Staff Access Only</span>
        </div>

        <!-- Page Header -->
        <header class="page-header">
            <div class="page-header-text">
                <h1 class="page-title">Manage Rooms</h1>
                <p class="page-subtitle">Update room details, pricing, and availability.</p>
            </div>
            <a href="@Url.Action("Create", "Rooms")" class="btn-add-room">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add New Room
            </a>
        </header>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon total">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(Model?.Count() ?? 0)</div>
                    <div class="stat-label">Total Rooms</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon active">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(Model?.Count(r => r.IsAvailable) ?? 0)</div>
                    <div class="stat-label">Active Rooms</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon capacity">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(Model?.Sum(r => r.Capacity) ?? 0)</div>
                    <div class="stat-label">Total Capacity</div>
                </div>
            </div>
        </div>

        <!-- Rooms Grid -->
        <div class="rooms-grid">
            @if (Model != null && Model.Any())
            {
                @foreach (var room in Model)
                {
                    <div class="room-card">
                        <div class="room-image-wrapper">
                            <img src="https://images.unsplash.com/photo-1497366811353-6870744d04b2?w=600&h=400&fit=crop" alt="@room.Name" class="room-image">
                            <span class="room-status-badge @(room.IsAvailable ? "active" : "inactive")">
                                @(room.IsAvailable ? "Active" : "Inactive")
                            </span>
                        </div>

                        <div class="room-card-content">
                            <div class="room-header">
                                <div>
                                    <h3 class="room-name">@room.Name</h3>
                                    <div class="room-capacity">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        Up to @room.Capacity
                                    </div>
                                </div>
                            </div>

                            <div class="room-pricing">
                                <span class="price-item">£@room.PricePerHour/hr</span>
                                <span class="price-separator">•</span>
                                <span class="price-item">£@((room.PricePerHour * 4).ToString("0"))/half-day</span>
                                <span class="price-separator">•</span>
                                <span class="price-item">£@((room.PricePerHour * 8).ToString("0"))/day</span>
                            </div>

                            <div class="room-actions">
                                <div class="availability-toggle">
                                    <div class="toggle-switch @(room.IsAvailable ? "active" : "")"></div>
                                    <span class="availability-label">@(room.IsAvailable ? "Available" : "Unavailable")</span>
                                </div>
                                <a href="@Url.Action("Edit", "Rooms", new { id = room.RoomId })" class="btn-edit">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <div class="empty-state-icon">🏢</div>
                    <h3 class="empty-state-title">No rooms found</h3>
                    <p class="empty-state-text">
                        There are no rooms to display. Click "Add New Room" to create your first room.
                    </p>
                </div>
            }
        </div>
    </main>

    <script>
        function toggleAvailability(roomId, element) {
            // Toggle the visual state immediately
            element.classList.toggle('active');
            const label = element.nextElementSibling;
            const isActive = element.classList.contains('active');
            label.textContent = isActive ? 'Available' : 'Unavailable';

        }
    </script>
</body>
</html>
