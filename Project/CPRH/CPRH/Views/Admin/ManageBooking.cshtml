@model IEnumerable<AdminController.BookingWithUserViewModel>
@using Microsoft.AspNetCore.Identity
@{
    var users = ViewBag.Users as List<IdentityUser>;
}

@{
    ViewData["Title"] = "Manage Bookings";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Bookings - CityPoint Room Hire</title>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --navy-dark: #1A2942;
            --navy-medium: #2D3E5F;
            --navy-light: #3B4E6F;
            --accent-orange: #FFB84D;
            --white: #FFFFFF;
            --off-white: #F8F9FA;
            --gray-light: #E8EAED;
            --gray-medium: #6B7280;
            --text-dark: #111827;
            --success: #10B981;
            --warning: #F59E0B;
            --danger: #EF4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Sora', sans-serif;
            background: var(--off-white);
            color: var(--text-dark);
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: var(--navy-dark);
            color: var(--white);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.25rem;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: var(--accent-orange);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--navy-dark);
        }

        .logo-text {
            font-size: 1.125rem;
            font-weight: 700;
        }

        .sidebar-subtitle {
            font-size: 0.813rem;
            color: rgba(255, 255, 255, 0.6);
            margin-left: 48px;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem 0;
            overflow-y: auto;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.938rem;
            font-weight: 500;
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background: rgba(255, 255, 255, 0.05);
                color: var(--white);
            }

            .nav-item.active {
                background: rgba(255, 184, 77, 0.1);
                color: var(--accent-orange);
                border-left-color: var(--accent-orange);
            }

            .nav-item svg {
                width: 20px;
                height: 20px;
                flex-shrink: 0;
            }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .staff-profile {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .staff-avatar {
            width: 40px;
            height: 40px;
            background: var(--accent-orange);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: var(--navy-dark);
        }

        .staff-info {
            flex: 1;
        }

        .staff-name {
            font-size: 0.938rem;
            font-weight: 600;
            color: var(--white);
        }

        .staff-email {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            text-decoration: none;
            justify-content: center;
        }

            .logout-btn:hover {
                background: rgba(255, 255, 255, 0.05);
                color: var(--white);
                border-color: rgba(255, 255, 255, 0.3);
            }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            flex: 1;
            padding: 2rem;
            min-height: 100vh;
        }

        .restricted-banner {
            background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            border-left: 4px solid var(--danger);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .restricted-banner svg {
                color: var(--danger);
                flex-shrink: 0;
            }

        .restricted-text {
            font-size: 0.938rem;
            font-weight: 600;
            color: #991B1B;
        }

        .page-header {
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--navy-dark);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: var(--gray-medium);
            font-size: 1.063rem;
        }

        /* Search and Filter Bar */
        .search-filter-bar {
            background: var(--white);
            padding: 1.25rem 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--gray-light);
            margin-bottom: 2rem;
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .search-input-wrapper {
            flex: 1;
            position: relative;
        }

            .search-input-wrapper svg {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--gray-medium);
            }

        .search-input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border: 1px solid var(--gray-light);
            border-radius: 8px;
            font-size: 0.938rem;
            font-family: 'Sora', sans-serif;
            transition: all 0.3s ease;
        }

            .search-input:focus {
                outline: none;
                border-color: var(--accent-orange);
            }

        .filter-dropdown {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.25rem;
            border: 1px solid var(--gray-light);
            border-radius: 8px;
            background: var(--white);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .filter-dropdown:hover {
                border-color: var(--gray-medium);
            }

            .filter-dropdown svg {
                color: var(--gray-medium);
            }

            .filter-dropdown select {
                border: none;
                background: none;
                font-family: 'Sora', sans-serif;
                font-size: 0.938rem;
                font-weight: 500;
                color: var(--text-dark);
                cursor: pointer;
                outline: none;
            }

        /* Bookings List */
        .bookings-list {
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }

        .booking-card {
            background: var(--white);
            border-radius: 12px;
            border: 1px solid var(--gray-light);
            padding: 1.75rem;
            transition: all 0.3s ease;
        }

            .booking-card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
                transform: translateY(-2px);
            }

        .booking-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.25rem;
        }

        .booking-id-status {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .booking-id {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-medium);
        }

        .status-badge {
            padding: 0.375rem 0.875rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
        }

            .status-badge.pending {
                background: #FEF3C7;
                color: #92400E;
            }

            .status-badge.confirmed {
                background: #D1FAE5;
                color: #065F46;
            }

            .status-badge.cancelled {
                background: #FEE2E2;
                color: #991B1B;
            }

        .booking-attendees-price {
            text-align: right;
        }

        .attendees-count {
            font-size: 0.875rem;
            color: var(--gray-medium);
            margin-bottom: 0.25rem;
        }

        .booking-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent-orange);
        }

        .booking-room-name {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin-bottom: 1rem;
        }

        .booking-details-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 1.25rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-medium);
            font-size: 0.938rem;
        }

            .detail-item svg {
                width: 18px;
                height: 18px;
                color: var(--navy-dark);
            }

        .booking-notes {
            background: var(--off-white);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.25rem;
            border-left: 3px solid var(--accent-orange);
        }

        .notes-label {
            font-size: 0.813rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin-bottom: 0.25rem;
        }

        .notes-text {
            font-size: 0.875rem;
            color: var(--gray-medium);
        }

        .booking-actions {
            display: flex;
            gap: 0.75rem;
            padding-top: 1.25rem;
            border-top: 1px solid var(--gray-light);
        }

        .btn-edit {
            flex: 1;
            padding: 0.75rem 1.5rem;
            background: var(--navy-dark);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.938rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

            .btn-edit:hover {
                background: var(--accent-orange);
                color: var(--navy-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255, 184, 77, 0.3);
                text-decoration: none;
            }

        .btn-view-details {
            flex: 1;
            padding: 0.75rem 1.5rem;
            background: transparent;
            color: var(--navy-dark);
            border: 2px solid var(--gray-light);
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.938rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

            .btn-view-details:hover {
                background: var(--off-white);
                border-color: var(--navy-dark);
                transform: translateY(-2px);
                text-decoration: none;
            }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--white);
            border-radius: 12px;
            border: 1px solid var(--gray-light);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            color: var(--gray-medium);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .sidebar.mobile-open {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .page-title {
            font-size: 2rem;
        }

        .search-filter-bar {
            flex-direction: column;
        }

        .booking-details-grid {
            grid-template-columns: 1fr;
        }

        .booking-actions {
            flex-direction: column;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <div class="logo-icon">CP</div>
                <div class="logo-text">CityPoint</div>
            </div>
            <div class="sidebar-subtitle">Staff Portal</div>
        </div>

        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                Dashboard
            </a>
            <a href="@Url.Action("ManageBooking", "Admin")" class="nav-item active">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Manage Bookings
            </a>
            <a href="@Url.Action("ManageRoom", "Admin")" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Manage Rooms
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="staff-profile">
                <div class="staff-avatar">
                    @(User.Identity?.Name?.Substring(0, 2).ToUpper())
                </div>
                <div class="staff-info">
                    <div class="staff-name">Staff Admin</div>
                    <div class="staff-email">@User.Identity?.Name</div> <!-- im calling the real admin email using aspnet identity-->
                </div>
            </div>
        </div>
            <a href="@Url.Action("Index", "Home")" class="logout-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                Exit Staff Area
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Restricted Banner -->
        <div class="restricted-banner">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path>
            </svg>
            <span class="restricted-text">Restricted Area - Staff Access Only</span>
        </div>

        <!-- Page Header -->
        <header class="page-header">
            <h1 class="page-title">Manage Booking Requests</h1>
            <p class="page-subtitle">Review, confirm, or deny booking requests from customers.</p>
        </header>

        <!-- Search and Filter -->
        <div class="search-filter-bar">

            <form method="get" asp-action="ManageBooking"
                  style="display:flex; gap:1rem; width:100%;">

                <div class="search-input-wrapper" style="flex:1;">
                    <svg width="20" height="20" viewBox="0 0 24 24"
                         fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>

                    <input type="text"
                           name="search"
                           class="search-input"
                           placeholder="Search by booking ID, room or user..." />
                </div>

                <div class="filter-dropdown">
                    <svg width="20" height="20" viewBox="0 0 24 24"
                         fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                    </svg>

                    <select name="status">
                        <option value="All">All Bookings</option>
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>

                <button type="submit" class="btn-view-details">
                    Filter
                </button>

            </form>

        </div>


        <!-- Bookings List -->
        <div class="bookings-list">
            @if (Model.Any())
            {
                @foreach (var item in Model.OrderByDescending(b => b.Booking.BookingDate))
                {
                    <div class="booking-card">
                        <div class="booking-card-header">
                            <div class="booking-id-status">
                                <span class="booking-id">
                                    <a asp-controller="Bookings"
                                       asp-action="Details"
                                       asp-route-id="@item.Booking.BookingId"
                                       style="text-decoration:none;color:inherit;">
                                        BK-2024-00@(item.Booking.BookingId)
                                    </a>
                                </span>

                                <span class="status-badge @item.Booking.Status.ToLower()">
                                    @item.Booking.Status
                                </span>
                            </div>

                            <!-- ✅ ROOM LOGIC START -->
                            @{
                                double totalPrice = 0;
                                int capacity = 0;

                                if (item.Booking.Room != null)
                                {
                                    capacity = item.Booking.Room.Capacity;

                                    var duration =
                                    item.Booking.EndTime.ToTimeSpan()
                                    - item.Booking.StartTime.ToTimeSpan();

                                    totalPrice =
                                    duration.TotalHours *
                                    item.Booking.Room.PricePerHour;
                                }
                            }

                            <div class="booking-attendees-price">
                                <div class="attendees-count">
                                    @capacity attendees
                                </div>
                                <div class="booking-price">
                                    £@totalPrice.ToString("0.00")
                                </div>
                            </div>
                            <!-- ✅ ROOM LOGIC END -->
                        </div>

                        <h3 class="booking-room-name">
                            Room ID: @item.Booking.RoomId
                        </h3>

                        <div class="booking-details-grid">
                            <div class="detail-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                <span>Customer ID: @item.Booking.UserId</span>
                            </div>

                            <div class="detail-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                <span>
                                    @item.Booking.BookingDate.ToString("dd MMM yyyy")
                                </span>
                            </div>

                            <div class="detail-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                    <polyline points="22,6 12,13 2,6"></polyline>
                                </svg>
                                <span>@item.UserEmail</span>
                            </div>

                            <div class="detail-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                <span>
                                    @item.Booking.StartTime.ToString("HH:mm")
                                    -
                                    @item.Booking.EndTime.ToString("HH:mm")
                                </span>
                            </div>
                        </div>

                        <div class="booking-actions">
                            <a asp-controller="Bookings"
                               asp-action="Edit"
                               asp-route-id="@item.Booking.BookingId"
                               class="btn-edit">
                                Edit
                            </a>

                            <a asp-controller="Bookings"
                               asp-action="Details"
                               asp-route-id="@item.Booking.BookingId"
                               class="btn-view-details">
                                Details
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">📅</div>
                    <h3 class="empty-state-title">No bookings found</h3>
                    <p class="empty-state-text">
                        There are no bookings to display at this time.
                    </p>
                </div>
            }
        </div>
    </main>
</body>
</html>