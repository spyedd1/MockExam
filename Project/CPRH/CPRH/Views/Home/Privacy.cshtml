@{
    ViewData["Title"] = "Booking Policies";
}

<!-- Page Header -->
<section class="page-header">
    <div class="page-header-container">
        <h1>Booking Policies</h1>
        <p>Please read our booking policies carefully before making a reservation. These policies ensure fair access for all our customers.</p>
    </div>
</section>

<!-- Policies Content -->
<section class="policies-content">
    <div class="section-container">

        <!-- Booking Procedure -->
        <div class="policy-section">
            <div class="policy-header">
                <div class="policy-icon">📋</div>
                <h2 class="policy-title">Booking Procedure</h2>
            </div>
            <div class="policy-list">
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>All bookings must be made through our online booking system or by contacting our staff directly.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Booking requests are subject to availability and staff confirmation within 24 hours.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>A booking is only confirmed once you receive a confirmation email from our team.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Regular customers may be eligible for priority booking status—please enquire with our staff.</p>
                </div>
            </div>
        </div>

        <!-- Booking Hours & Duration -->
        <div class="policy-section">
            <div class="policy-header">
                <div class="policy-icon">⏰</div>
                <h2 class="policy-title">Booking Hours & Duration</h2>
            </div>
            <div class="policy-content">
                <p><strong>Standard Hours:</strong> Monday to Friday, 9:00 AM to 6:00 PM</p>
                <p><strong>Weekend Availability:</strong> Saturday 9:00 AM to 5:00 PM (by prior arrangement only)</p>

                <div class="duration-box">
                    <h3>Duration Options:</h3>
                    <ul>
                        <li><strong>Hourly:</strong> Minimum 1 hour, charged per hour thereafter</li>
                        <li><strong>Half-Day:</strong> 4 consecutive hours (morning: 9am–1pm or afternoon: 1pm–5pm)</li>
                        <li><strong>Full-Day:</strong> 8 consecutive hours (9am–5pm or 10am–6pm as sessions)</li>
                    </ul>
                    <p class="duration-note">Setup and pack-down time must be included in the booking duration.</p>
                </div>
            </div>
        </div>

        <!-- Payment Terms -->
        <div class="policy-section">
            <div class="policy-header">
                <div class="policy-icon">💳</div>
                <h2 class="policy-title">Payment Terms</h2>
            </div>
            <div class="policy-list">
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Payment is due in full prior to your booking. We accept credit/debit cards and bank transfers.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>For bookings over £500, a 50% deposit is required at the time of booking, with the balance due 7 days before the event.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Registered business accounts may be eligible for invoicing with 14-day payment terms.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Additional equipment charges will be invoiced with the main booking or added to your final bill.</p>
                </div>
            </div>
        </div>

        <!-- Cancellation Policy -->
        <div class="policy-section">
            <div class="policy-header">
                <div class="policy-icon">🔄</div>
                <h2 class="policy-title">Cancellation Policy</h2>
            </div>
            <div class="cancellation-table">
                <div class="cancellation-row">
                    <div class="cancellation-time">More than 7 days before</div>
                    <div class="cancellation-refund full-refund">Full refund</div>
                </div>
                <div class="cancellation-row">
                    <div class="cancellation-time">3-7 days before</div>
                    <div class="cancellation-refund half-refund">50% refund</div>
                </div>
                <div class="cancellation-row">
                    <div class="cancellation-time">1-2 days before</div>
                    <div class="cancellation-refund quarter-refund">25% refund</div>
                </div>
                <div class="cancellation-row">
                    <div class="cancellation-time">Less than 24 hours</div>
                    <div class="cancellation-refund no-refund">No refund</div>
                </div>
            </div>
            <p class="policy-note">Cancellations must be made in writing via email to bookings@citypoint-roomhire.co.uk or through your account on our website.</p>
        </div>

        <!-- Room Usage & Conduct -->
        <div class="policy-section">
            <div class="policy-header">
                <div class="policy-icon">🏢</div>
                <h2 class="policy-title">Room Usage & Conduct</h2>
            </div>
            <div class="policy-list">
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Rooms must be left in the condition they were found; basic. Any damage will be charged accordingly.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Maximum occupancy limits must be observed for fire risk and safety reasons.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>Smoking is strictly prohibited in all indoor areas and within 5 meters of entrances.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>External catering is permitted with prior approval. A cleaning charge may apply.</p>
                </div>
                <div class="policy-item">
                    <div class="policy-bullet">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <p>The hirer is responsible for the behaviour of all attendees.</p>
                </div>
            </div>
        </div>

        <!-- Liability & Insurance -->
        <div class="policy-section">
            <div class="policy-header">
                <div class="policy-icon">🛡️</div>
                <h2 class="policy-title">Liability & Insurance</h2>
            </div>
            <div class="policy-content">
                <p>CityPoint Room Hire maintains public liability insurance covering the premises. However, we recommend that hirers obtain their own event insurance for larger gatherings.</p>
                <p>CityPoint Room Hire is not liable for any personal property loss, stolen, or damaged on the premises. Hirers are responsible for their own equipment and belongings.</p>
                <p>In the event of unforeseen circumstances such as building emergencies or utility failures, CityPoint Room Hire will make every effort to offer alternative arrangements or a full refund.</p>
            </div>
        </div>

        <!-- Contact Section -->
        <div class="contact-cta">
            <p>If you have any questions about our policies, please don't hesitate to contact us.</p>
            <div class="contact-details">
                <span><strong>Email:</strong> <a href="mailto:bookings@citypoint-roomhire.co.uk">bookings@citypoint-roomhire.co.uk</a></span>
                <span><strong>Phone:</strong> <a href="tel:02071814567">020 7181 4567</a></span>
            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        :root {
            --navy-dark: #1A2942;
            --navy-medium: #2D3E5F;
            --navy-light: #3B4E6F;
            --accent-orange: #FFB84D;
            --white: #FFFFFF;
            --off-white: #F8F9FA;
            --gray-light: #E8EAED;
            --gray-medium: #6B7280;
            --text-dark: #111827;
        }

        body {
            background: var(--off-white);
        }

        /* Page Header */
        .page-header {
            background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy-light) 100%);
            padding: 4rem 0;
            position: relative;
            overflow: hidden;
            margin: 0 -50vw;
            margin-left: calc(50% - 50vw);
            margin-right: calc(50% - 50vw);
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 50%;
                height: 100%;
                background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse"><path d="M 40 0 L 0 0 0 40" fill="none" stroke="rgba(255,255,255,0.03)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
                opacity: 0.5;
            }

        .page-header-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 1;
        }

        .page-header h1 {
            font-family: 'Sora', sans-serif;
            font-size: 3rem;
            font-weight: 700;
            color: var(--white);
            margin-bottom: 1rem;
        }

        .page-header p {
            font-size: 1.125rem;
            color: rgba(255, 255, 255, 0.85);
            max-width: 700px;
            line-height: 1.7;
        }

        /* Policies Content */
        .policies-content {
            padding: 4rem 0;
        }

        .section-container {
            max-width: 1080px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .policy-section {
            background: var(--white);
            border-radius: 16px;
            padding: 2.5rem;
            margin-bottom: 2rem;
            border: 1px solid var(--gray-light);
        }

        .policy-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.75rem;
        }

        .policy-icon {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, #FFF3E0 0%, #FFE6C7 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            flex-shrink: 0;
        }

        .policy-title {
            font-family: 'Sora', sans-serif;
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin: 0;
        }

        .policy-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .policy-item {
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }

        .policy-bullet {
            width: 28px;
            height: 28px;
            background: var(--off-white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            margin-top: 0.125rem;
        }

            .policy-bullet svg {
                width: 16px;
                height: 16px;
                color: var(--accent-orange);
            }

        .policy-item p {
            margin: 0;
            color: var(--gray-medium);
            font-size: 1rem;
            line-height: 1.7;
        }

        .policy-content p {
            color: var(--gray-medium);
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 1rem;
        }

            .policy-content p:last-child {
                margin-bottom: 0;
            }

        .policy-content strong {
            color: var(--navy-dark);
            font-weight: 600;
        }

        .duration-box {
            background: var(--off-white);
            padding: 1.75rem;
            border-radius: 12px;
            margin-top: 1.5rem;
            border: 1px solid var(--gray-light);
        }

            .duration-box h3 {
                font-family: 'Sora', sans-serif;
                font-size: 1.125rem;
                font-weight: 600;
                color: var(--navy-dark);
                margin-bottom: 1rem;
            }

            .duration-box ul {
                list-style: none;
                padding: 0;
                margin: 0 0 1rem 0;
            }

            .duration-box li {
                color: var(--gray-medium);
                font-size: 1rem;
                line-height: 1.8;
                padding-left: 0;
            }

                .duration-box li strong {
                    color: var(--navy-dark);
                }

        .duration-note {
            margin: 1rem 0 0 0 !important;
            font-size: 0.938rem !important;
            font-style: italic;
            color: var(--gray-medium) !important;
        }

        .policy-note {
            margin-top: 1.5rem;
            font-size: 0.938rem;
            color: var(--gray-medium);
            font-style: italic;
            line-height: 1.6;
        }

        /* Cancellation Table */
        .cancellation-table {
            background: var(--off-white);
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid var(--gray-light);
        }

        .cancellation-row {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 2rem;
            padding: 1.25rem 1.75rem;
            align-items: center;
        }

            .cancellation-row:not(:last-child) {
                border-bottom: 1px solid var(--gray-light);
            }

        .cancellation-time {
            font-family: 'Sora', sans-serif;
            font-weight: 600;
            color: var(--navy-dark);
            font-size: 1rem;
        }

        .cancellation-refund {
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.938rem;
        }

        .full-refund {
            background: #D1FAE5;
            color: #065F46;
        }

        .half-refund {
            background: #FEF3C7;
            color: #92400E;
        }

        .quarter-refund {
            background: #FED7AA;
            color: #9A3412;
        }

        .no-refund {
            background: #FEE2E2;
            color: #991B1B;
        }

        /* Contact CTA */
        .contact-cta {
            background: linear-gradient(135deg, var(--off-white) 0%, var(--white) 100%);
            padding: 2.5rem;
            border-radius: 16px;
            text-align: center;
            margin-top: 3rem;
            border: 2px solid var(--gray-light);
        }

            .contact-cta p {
                font-size: 1.125rem;
                color: var(--navy-dark);
                margin-bottom: 1.5rem;
            }

        .contact-details {
            display: flex;
            gap: 3rem;
            justify-content: center;
            flex-wrap: wrap;
        }

            .contact-details span {
                color: var(--gray-medium);
                font-size: 1rem;
            }

            .contact-details a {
                color: var(--accent-orange);
                text-decoration: none;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .contact-details a:hover {
                    color: var(--navy-dark);
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .page-header h1

        {
            font-size: 2rem;
        }

        .policy-section {
            padding: 1.75rem;
        }

        .policy-title {
            font-size: 1.375rem;
        }

        .policy-icon {
            width: 48px;
            height: 48px;
            font-size: 1.5rem;
        }

        .cancellation-row {
            grid-template-columns: 1fr;
            gap: 0.75rem;
        }

        .cancellation-refund {
            justify-self: start;
        }

        .contact-details {
            flex-direction: column;
            gap: 1rem;
        }

        .duration-box {
            padding: 1.25rem;
        }

        }
    </style>
}