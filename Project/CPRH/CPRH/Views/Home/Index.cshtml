@{
    ViewData["Title"] = "Home Page";
}
<!-- Hero Section -->
<section class="hero">
    <div class="hero-container">
        <div class="hero-content">
            <h1>Professional Venue Hire in the Heart of the City</h1>
            <p>Modern meeting rooms, training suites, and event spaces for businesses and community groups. Equipped with everything you need for a successful gathering.</p>
            <div class="hero-cta">
                <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary">View Our Rooms →</a>
            </div>
            <div class="hero-features">
                <div class="hero-feature">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Central London
                </div>
                <div class="hero-feature">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                    4.9 Rating
                </div>
            </div>
        </div>
        <div class="hero-image-wrapper">
            <div class="hero-image">
                <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&h=600&fit=crop" alt="Modern office hallway">
            </div>
            <div class="hero-badge">
                <div class="hero-badge-icon">⭐</div>
                <div>
                    <div class="hero-badge-text">500+</div>
                    <div class="hero-badge-label">Happy Customers</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features">
    <div class="section-container">
        <div class="section-header">
            <h2 class="section-title">Why Choose CityPoint?</h2>
            <p class="section-subtitle">Everything you need for productive meetings and successful events</p>
        </div>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">📶</div>
                <h3 class="feature-title">High-Speed WiFi</h3>
                <p class="feature-description">Complimentary gigabit internet</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🖥️</div>
                <h3 class="feature-title">AV Equipment</h3>
                <p class="feature-description">Projectors & screens included</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">☕</div>
                <h3 class="feature-title">Refreshments</h3>
                <p class="feature-description">Tea, coffee & water available</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🕐</div>
                <h3 class="feature-title">Flexible Hours</h3>
                <p class="feature-description">Book by hour, half-day or full-day</p>
            </div>
        </div>
    </div>
</section>

<!-- Rooms Section -->
