@model IEnumerable<CPRH.Models.Room>
@{
    ViewData["Title"] = "Our Rooms";
}

<!-- Page Header -->
<section class="page-header">
    <div class="page-header-container">
        <h1>Our Rooms</h1>
        <p>Discover the perfect space for your meeting, training session, or event. All rooms include complimentary WiFi and standard AV equipment.</p>
    </div>
</section>

<!-- Filters Section -->
<section class="filters-section">
    <div class="section-container">
        <div class="filters-container">
            <div class="filter-group">
                <form asp-action="FilterByRooms" method="get" class="filter-form">
                    <label for="rooms" class="filter-label">Number of Rooms</label>
                    <select id="rooms" name="rooms" class="filter-select">
                        <option value="1">1 Room</option>
                        <option value="2">2 Rooms</option>
                        <option value="3">3 Rooms</option>
                        <option value="4">4 Rooms</option>
                        <option value="5">5 Rooms</option>
                    </select>
                    <button type="submit" class="btn-filter">Filter</button>
                </form>
            </div>

            <div class="filter-group">
                <form method="get" asp-action="FilterByPrice" class="filter-form">
                    <label class="filter-label">Price Range</label>
                    <div class="price-inputs">
                        <input type="number" name="minPrice" step="0.01" placeholder="Min £" class="filter-input" />
                        <span class="price-separator">-</span>
                        <input type="number" name="maxPrice" step="0.01" placeholder="Max £" class="filter-input" />
                    </div>
                    <button type="submit" class="btn-filter">Filter</button>
                </form>
            </div>

            <div class="filter-group">
                <label class="filter-label">Sort & View</label>
                <div class="filter-buttons">
                    <a asp-action="SortByGuestRating" asp-route-ascending="true" class="btn-filter-secondary">
                        Rating ↑
                    </a>
                    <a asp-action="SortByGuestRating" asp-route-ascending="false" class="btn-filter-secondary">
                        Rating ↓
                    </a>
                </div>
            </div>

            <div class="filter-group">
                <label class="filter-label">Quick Filters</label>
                <div class="filter-buttons">
                    <form asp-action="AvailableRooms" style="display: inline;">
                        <button type="submit" class="btn-filter-secondary">Available Only</button>
                    </form>
                    <form asp-action="Index" style="display: inline;">
                        <button type="submit" class="btn-filter-secondary">All Rooms</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Rooms Listing -->
<section class="rooms-listing">
    <div class="section-container">
        @foreach (var item in Model)
        {
            <div class="room-listing-card">
                <div class="room-listing-image">
                    <img src="https://images.unsplash.com/photo-1497366811353-6870744d04b2?w=600&h=400&fit=crop" alt="@item.Name">
                    @if (!item.IsAvailable)
                    {
                        <div class="unavailable-badge">Unavailable</div>
                    }
                </div>
                <div class="room-listing-content">
                    <div class="room-listing-header">
                        <div>
                            <h3 class="room-listing-name">@item.Name</h3>
                            <div class="room-listing-capacity">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                Up to @item.Capacity people
                            </div>
                        </div>
                        <div class="room-listing-price">
                            <span class="price-amount">£@item.PricePerHour</span>
                            <span class="price-period">per hour</span>
                        </div>
                    </div>

                    <p class="room-listing-description">@item.Description</p>

                    @if (!string.IsNullOrEmpty(item.Equipment))
                    {
                        <div class="room-listing-features">
                            @foreach (var feature in item.Equipment.Split(',').Take(4))
                            {
                                <span class="feature-badge">@feature.Trim()</span>
                            }
                        </div>
                    }

                    <div class="room-listing-meta">
                        <span class="meta-item">Half-day: £@(item.PricePerHour * 4)</span>
                        <span class="meta-item">Full-day: £@(item.PricePerHour * 8)</span>
                        @if (item.GuestRating > 0)
                        {
                            <span class="meta-item">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="var(--accent-orange)" stroke="var(--accent-orange)" stroke-width="2">
                                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                </svg>
                                @item.GuestRating.ToString("F1")
                            </span>
                        }
                    </div>

                    <div class="room-listing-actions">
                        <a asp-action="Details" asp-route-id="@item.RoomId" class="btn-view-details">View Details</a>
                        <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@item.RoomId" class="btn-book-room">Book This Room →</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Styles {
    <style>
        :root {
            --navy-dark: #1A2942;
            --navy-medium: #2D3E5F;
            --navy-light: #3B4E6F;
            --accent-orange: #FFB84D;
            --white: #FFFFFF;
            --off-white: #F8F9FA;
            --gray-light: #E8EAED;
            --gray-medium: #6B7280;
            --text-dark: #111827;
        }

        body {
            background: var(--off-white);
        }

        /* Page Header */
        .page-header {
            background: linear-gradient(135deg, var(--navy-dark) 0%, var(--navy-light) 100%);
            padding: 4rem 0;
            position: relative;
            overflow: hidden;
            margin: 0 -50vw;
            margin-left: calc(50% - 50vw);
            margin-right: calc(50% - 50vw);
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 50%;
                height: 100%;
                background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse"><path d="M 40 0 L 0 0 0 40" fill="none" stroke="rgba(255,255,255,0.03)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
                opacity: 0.5;
            }

        .page-header-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 1;
        }

        .page-header h1 {
            font-family: 'Sora', sans-serif;
            font-size: 3rem;
            font-weight: 700;
            color: var(--white);
            margin-bottom: 1rem;
        }

        .page-header p {
            font-size: 1.125rem;
            color: rgba(255, 255, 255, 0.85);
            max-width: 700px;
            line-height: 1.7;
        }

        /* Filters Section */
        .filters-section {
            background: var(--white);
            padding: 2rem 0;
            border-bottom: 1px solid var(--gray-light);
        }

        .filters-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .filter-label {
            font-family: 'Sora', sans-serif;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--navy-dark);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .filter-form {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .filter-select,
        .filter-input {
            padding: 0.75rem 1rem;
            border: 2px solid var(--gray-light);
            border-radius: 8px;
            font-size: 0.938rem;
            color: var(--navy-dark);
            background: var(--white);
            transition: all 0.3s ease;
        }

            .filter-select:focus,
            .filter-input:focus {
                outline: none;
                border-color: var(--accent-orange);
            }

        .price-inputs {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .price-inputs .filter-input {
                flex: 1;
            }

        .price-separator {
            color: var(--gray-medium);
            font-weight: 600;
        }

        .btn-filter {
            background: var(--navy-dark);
            color: var(--white);
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.938rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-filter:hover {
                background: var(--accent-orange);
                color: var(--navy-dark);
                transform: translateY(-2px);
            }

        .filter-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .btn-filter-secondary {
            background: var(--off-white);
            color: var(--navy-dark);
            padding: 0.625rem 1rem;
            border: 2px solid var(--gray-light);
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-filter-secondary:hover {
                background: var(--navy-dark);
                color: var(--white);
                border-color: var(--navy-dark);
                text-decoration: none;
            }

        /* Rooms Listing */
        .rooms-listing {
            padding: 4rem 0;
        }

        .section-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .room-listing-card {
            background: var(--white);
            border-radius: 16px;
            overflow: hidden;
            display: grid;
            grid-template-columns: 400px 1fr;
            gap: 0;
            margin-bottom: 2rem;
            border: 1px solid var(--gray-light);
            transition: all 0.3s ease;
        }

            .room-listing-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

        .room-listing-image {
            width: 100%;
            height: 100%;
            min-height: 320px;
            background: var(--gray-light);
            overflow: hidden;
            position: relative;
        }

            .room-listing-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

        .room-listing-card:hover .room-listing-image img {
            transform: scale(1.05);
        }

        .unavailable-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(220, 38, 38, 0.95);
            color: var(--white);
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .room-listing-content {
            padding: 2.5rem;
            display: flex;
            flex-direction: column;
        }

        .room-listing-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.25rem;
        }

        .room-listing-name {
            font-family: 'Sora', sans-serif;
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--navy-dark);
            margin-bottom: 0.5rem;
        }

        .room-listing-capacity {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-medium);
            font-size: 0.938rem;
        }

            .room-listing-capacity svg {
                color: var(--navy-dark);
            }

        .room-listing-price {
            text-align: right;
        }

        .price-amount {
            font-family: 'Sora', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--accent-orange);
            display: block;
            line-height: 1;
        }

        .price-period {
            font-size: 0.875rem;
            color: var(--gray-medium);
            display: block;
            margin-top: 0.25rem;
        }

        .room-listing-description {
            color: var(--gray-medium);
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .room-listing-features {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .feature-badge {
            background: var(--off-white);
            color: var(--navy-dark);
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 500;
            border: 1px solid var(--gray-light);
        }

        .room-listing-meta {
            display: flex;
            gap: 2rem;
            margin-bottom: 1.75rem;
            padding-top: 1.25rem;
            border-top: 1px solid var(--gray-light);
            align-items: center;
        }

        .meta-item {
            color: var(--gray-medium);
            font-size: 0.938rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .room-listing-actions {
            display: flex;
            gap: 1rem;
            margin-top: auto;
        }

        .btn-view-details {
            background: transparent;
            color: var(--navy-dark);
            border: 2px solid var(--navy-dark);
            padding: 0.875rem 1.75rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-view-details:hover {
                background: var(--navy-dark);
                color: var(--white);
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn-book-room {
            background: var(--navy-dark);
            color: var(--white);
            padding: 0.875rem 1.75rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-book-room:hover {
                background: var(--accent-orange);
                color: var(--navy-dark);
                transform: translateY(-2px);
                box-shadow: 0 12px 24px rgba(255, 184, 77, 0.3);
                text-decoration: none;
            }

        /* Responsive */
        @@edia (max-width: 1024px) {
            .room-listing-card

        {
            grid-template-columns: 1fr;
        }

        .room-listing-image {
            min-height: 280px;
        }

        .page-header h1 {
            font-size: 2.5rem;
        }

        .filters-container {
            grid-template-columns: 1fr;
        }

        }

        @@media (max-width: 768px) {
            .page-header h1

        {
            font-size: 2rem;
        }

        .room-listing-header {
            flex-direction: column;
            gap: 1rem;
        }

        .room-listing-price {
            text-align: left;
        }

        .room-listing-actions {
            flex-direction: column;
        }

        .room-listing-content {
            padding: 1.5rem;
        }

        .room-listing-meta {
            flex-wrap: wrap;
            gap: 1rem;
        }

        }
    </style>
}